# This is Git's per-user configuration file.
[alias]
	aa = add --all
	am = commit --amend
	br = branch
	cm = commit
	co = checkout
	cp = cherry-pick
	lg = log --graph
[credential]
	helper = libsecret
[color]
	ui = true
[core]
	editor = nvim
[grep]
	linenumber = true
[push]
	default = simple
[user]
	name = Jing Yen Loh
	email = lohjingyen@gmail.com
[rerere]
	enabled = true
